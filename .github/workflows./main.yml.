name: CI_Pipeline
on: [push, pull_request]

jobs:
  test-and-build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Build Backend Docker Image
        run: docker build ./backend -t backend-check

      - name: Build Frontend Docker Image
        run: docker build ./frontend -t frontend-check